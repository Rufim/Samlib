<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:layout_margin ="@dimen/spacing_medium"
        android:id="@+id/signIn_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signIn_login_text"
            android:maxLines="1"
            android:inputType="text"
            android:nextFocusDown="@+id/signIn_password_text"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="@string/sign_in_login_hint"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:id="@+id/signIn_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signIn_password_text"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:hint="@string/sign_in_password_hint"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/signIn_error"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:text="@string/sign_in_invalid"
        android:textColor="@color/red_light"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>