<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:gravity="center_vertical">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:id="@+id/favorites_autor_body"
                  android:background="@android:drawable/list_selector_background"
                  android:gravity="center_vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_large"
                android:text="Гончарова Галина Дмитриевна"
                android:id="@+id/favorites_author"
                android:singleLine="true"
                style="@style/item_text"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/subtitle"
                android:text="Писатель должен быть талантлив и дьявольски трудолюбив"
                android:id="@+id/favorites_annotation" android:maxLines="3"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                    android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2016-12-2"
                android:id="@+id/favorites_last_update"
                style="@style/item_text"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorites_update"
                android:visibility="gone"
                android:id="@+id/favorites_update"
                android:textSize="@dimen/spacing_small"
                style="@style/text.rate_column"/>
    </LinearLayout>

</LinearLayout>