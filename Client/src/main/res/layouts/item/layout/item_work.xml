<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_marginLeft="12dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/work_item_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="left"
            android:background="@android:drawable/list_selector_background"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Лейна. Первая книга цикла"
                android:id="@+id/work_item_title"
                android:textSize="@dimen/text_large"
                style="@style/item_text"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="469k  7.70*722"
                android:id="@+id/work_item_rate_and_size"
                android:textSize="@dimen/text_medium"
                android:visibility="gone"
                android:textColor="@color/light_gold"
                android:paddingLeft="0dp"
                android:textStyle="bold"
                style="@style/item_text"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/illustration_button"
                android:visibility="gone"
                android:text="@string/illustration"
                style="@style/item_text"
                android:textAllCaps="false"
                android:gravity="center"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/text_small"
                android:layout_margin="0dp"
                android:padding="6dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Жанры: "
                android:id="@+id/work_item_subtitle"
                android:visibility="gone"
                android:textSize="@dimen/text_medium"
                style="@style/subtitle"
                android:maxLines="2"
                android:textStyle="italic"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:id="@+id/work_annotation_layout"
                  android:orientation="vertical"
                  android:visibility="gone"
                  android:layout_marginLeft="@dimen/spacing_medium"
                  android:gravity="left">
        <com.nd.android.sdp.im.common.widget.htmlview.view.HtmlView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/work_annotation"
                  android:textColor="@color/light_gold"
                  android:textSize="@dimen/text_medium"/>
    </LinearLayout>
</LinearLayout>