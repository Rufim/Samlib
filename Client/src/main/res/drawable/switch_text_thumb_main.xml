<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape
                android:shape="rectangle"
                android:visible="true"
                android:dither="true"
                android:useLevel="false">
            <gradient
                    android:startColor="@color/dark_grey"
                    android:endColor="@color/primaryDark"
                    android:angle="270"/>
            <corners
                    android:radius="4dp"/>
            <size
                    android:width="60dp"
                    android:height="20dp"/>
            <stroke
                    android:width="4dp"
                    android:color="@color/deep_grey"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape
                android:shape="rectangle"
                android:visible="true"
                android:dither="true"
                android:useLevel="false">
            <gradient
                    android:startColor="@color/dark_grey"
                    android:endColor="@color/primaryDark"
                    android:angle="270"/>
            <corners
                    android:radius="4dp"/>
            <size
                    android:width="60dp"
                    android:height="20dp"/>
            <stroke
                    android:width="4dp"
                    android:color="@color/deep_grey"/>
        </shape>
    </item>
</selector>